# ==============================================================================
# SOUTHERN APPARELS ERP - CONFIGURATION
# ==============================================================================
# Just run: docker-compose up -d --build
# No changes needed - works automatically on localhost AND server!
# ==============================================================================

# Ports (change only if these ports are already in use)
FRONTEND_PORT=2222
BACKEND_PORT=8000

# Database (internal - don't need to change)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=root
POSTGRES_PORT=5432
POSTGRES_DB_CLIENTS=rmg_erp_clients
POSTGRES_DB_SAMPLES=rmg_erp_samples
POSTGRES_DB_USERS=rmg_erp_users
POSTGRES_DB_ORDERS=rmg_erp_orders
POSTGRES_DB_MERCHANDISER=rmg_erp_merchandiser
POSTGRES_DB_SETTINGS=rmg_erp_settings
POSTGRES_HOST_CLIENTS=db-clients
POSTGRES_HOST_SAMPLES=db-samples
POSTGRES_HOST_USERS=db-users
POSTGRES_HOST_ORDERS=db-orders
POSTGRES_HOST_MERCHANDISER=db-merchandiser
POSTGRES_HOST_SETTINGS=db-settings

# Redis (internal - don't need to change)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Security
SECRET_KEY=southern-apparels-erp-secret-key-2024-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS - Allow all origins
CORS_ORIGINS=*

# Connection pool
POOL_SIZE=10
MAX_OVERFLOW=10

# Environment
ENVIRONMENT=production

# Internal Docker URLs (don't change - these work automatically)
BACKEND_URL=http://backend:8000

# Frontend settings (don't change - works automatically)
NEXT_PUBLIC_API_MASK_URL=/api/v1
NEXT_PUBLIC_ENCRYPT_SECRETS=false
NEXT_PUBLIC_USER_COOKIE=sa-erp-user

# Docker project name
COMPOSE_PROJECT_NAME=southern-erp
