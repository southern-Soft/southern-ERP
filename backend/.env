# ==============================================================================
# BACKEND CONFIGURATION
# ==============================================================================
# This file is used for local development without Docker.
# When running with Docker, environment variables from docker-compose.yml override these.
# ==============================================================================

# PostgreSQL Base Settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=root
POSTGRES_PORT=5432

# Multi-Database Host Configuration
# For local development, change these to localhost if running DBs on host
POSTGRES_HOST_CLIENTS=db-clients
POSTGRES_HOST_SAMPLES=db-samples
POSTGRES_HOST_USERS=db-users
POSTGRES_HOST_ORDERS=db-orders
POSTGRES_HOST_MERCHANDISER=db-merchandiser
POSTGRES_HOST_SETTINGS=db-settings

# Multi-Database Names
POSTGRES_DB_CLIENTS=rmg_erp_clients
POSTGRES_DB_SAMPLES=rmg_erp_samples
POSTGRES_DB_USERS=rmg_erp_users
POSTGRES_DB_ORDERS=rmg_erp_orders
POSTGRES_DB_MERCHANDISER=rmg_erp_merchandiser
POSTGRES_DB_SETTINGS=rmg_erp_settings

# Security - CHANGE IN PRODUCTION!
SECRET_KEY=change-this-to-a-secure-random-string-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Connection Pool Settings
POOL_SIZE=10
MAX_OVERFLOW=10

# Environment
ENVIRONMENT=development

# CORS
CORS_ORIGINS=*
