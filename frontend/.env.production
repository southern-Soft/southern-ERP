# Production Environment - Works automatically, no IP/domain needed!

# API calls use relative path - browser automatically uses current URL
NEXT_PUBLIC_API_MASK_URL=/api/v1

# Disable encryption for simpler deployment
NEXT_PUBLIC_ENCRYPT_SECRETS=false

# Auth cookie
NEXT_PUBLIC_USER_COOKIE=sa-erp-user

# Backend URL for server-side API proxy (Docker internal network)
API_URL=http://backend:8000
BACKEND_URL=http://backend:8000
